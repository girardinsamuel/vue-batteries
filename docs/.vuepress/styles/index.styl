@tailwind base;
ol,
ul {
  list-style: initial;
  padding-left: 1.2em;
}
ol, ul, p {
  line-height: 1.7
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.25;
}
h1 {
  font-size: 2.2rem;
}
h2 {
  font-size: 1.65rem;
}
h3 {
  font-size: 1.35rem;
}
a
  font-weight 500
  color $accentColor
  text-decoration none

p {
  display: block;
  margin-block-start: 1em;
  margin-block-end: 1em;
  margin-inline-start: 0px;
  margin-inline-end: 0px;
}

@tailwind components;
@tailwind utilities;
